<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuyan.personalblog.Mapper.HomeMapper">
    <insert id="addBlog">
            insert into blog(user_id,title,content,create_time) values(#{userId},#{title},#{content},#{createTime})
    </insert>

    <select id="getBlogs" resultType="com.liuyan.personalblog.POJO.Blog">
        SELECT * FROM blog WHERE user_id = #{id};
    </select>

</mapper>